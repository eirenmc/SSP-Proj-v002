extends layout

block content
  div.row
    h1.col-xs-12.col-sm-6.col-md-8 Create an Account
  br
  div.row
        div.col-xs-12.col-sm-6.col-md-8
          form(method="post" class='style')
            label(for='name') Name:
            br
            input(class='form-control smallInputs' placeholder='Name' type="text", name='name', required=true)
            br
            label(for='username') Username:
            br
            input(class='form-control smallInputs' placeholder='Username' type="text", name='username', required=true)
            br
            label(for='email') Email:
            br
            input(class='form-control smallInputs' placeholder='Email' type="email", name='email', required=true)
            br
            label(for='password') Password:
            br
            input(class='form-control smallInputs' placeholder='Password' type='password', name='password', required=true)
            br  
            br  
            input.btn.btn-default(type='submit', value='Create Account')
            br
  div.row
        br
        div.col-xs-12.col-sm-6.col-md-8
          a(href='/loginAccount')
            button.btn.btn-default Return Home